	}
};


//모듈콤보
this.divRegiMenuSearch_cboMenuModule_canitemchange = function(obj:nexacro.Combo,e:nexacro.ItemChangeEventInfo)
{
	var sVal = e.postvalue;
	if( sVal == "%"){
