	this.dsRegiMenu.filter("");
	
	var strSvcId    = "searchPersonalPremMenuList";
	var strSvcUrl   = "searchPersonalPremMenuList.do";
	var inData      = "dsCondDetail=dsCondDetail";
	var outData     = "dsRegiMenu=dsRegiMenu";
	var strArg      = "";	
	var callBackFnc = "fnCallback";
	
