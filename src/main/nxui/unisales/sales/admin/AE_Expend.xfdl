                <Cell col="8" text="expr:dataset.getSum(&quot;VAT&quot;)" textAlign="right" displaytype="number"/>
                <Cell col="9" text="expr:dataset.getSum(&quot;AMT&quot;)" textAlign="right" displaytype="number"/>
