                <Column size="60"/>
                <Column size="80"/>
                <Column size="200"/>
                <Column size="150"/>
                <Column size="200"/>
                <Column size="150"/>
                <Column size="80"/>
                <Column size="60"/>
                <Column size="80"/>
                <Column size="120"/>
                <Column size="200"/>
                <Column size="200"/>
                <Column size="60"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
                <Row size="24" band="summ"/>
              </Rows>
