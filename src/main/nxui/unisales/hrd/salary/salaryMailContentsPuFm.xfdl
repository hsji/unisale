      <BindItem id="item1" compid="edtUserNm" propid="value" datasetid="dsMailContents" columnid="USER_NAME"/>
      <BindItem id="item2" compid="edtUserEmail" propid="value" datasetid="dsMailContents" columnid="USER_EMAIL"/>
    </Bind>
