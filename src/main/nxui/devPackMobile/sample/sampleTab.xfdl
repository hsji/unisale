//     {
//         arrDiv[i].set_width(nWidth);
//     }
//     
//     this.divTab.form.resetScroll();

    
	//탭정보
	this.fn_setTabInfo(
		[ {objBtn: this.divTab.form.btn1, objDiv: this.divTab1}
		, {objBtn: this.divTab.form.btn2, objDiv: this.divTab2}
		, {objBtn: this.divTab.form.btn3, objDiv: this.divTab3}
		, {objBtn: this.divTab.form.btn4, objDiv: this.divTab4}
		]);	    
};
