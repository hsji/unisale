              <Button id="btn1" taborder="3" text="탭1" left="0" top="0" width="120" height="60" cssclass="btn_WF_tab_S"/>
              <Button id="btn2" taborder="2" text="탭2" left="btn1:0" top="0" width="120" height="60" cssclass="btn_WF_tab_N"/>
              <Button id="btn3" taborder="1" text="탭3" left="btn2:0" top="0" width="120" height="60" cssclass="btn_WF_tab_N"/>
